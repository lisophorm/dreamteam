	<s:BorderContainer borderColor="0x000000" cornerRadius="0" backgroundColor="0x000000" >
		<s:borderStroke>
			<s:SolidColorStroke weight="15" color="0x000000" />
		</s:borderStroke>
		
		<s:VideoDisplay visible="true" complete="blah_completeHandler(event)" creationComplete="blah_creationCompleteHandler(event)" mediaPlayerStateChange="blah_mediaPlayerStateChangeHandler(event)" source="/assets/video/Crystal Palace FC on YouTube.f4v"  click="blah_clickHandler(event)" autoDisplayFirstFrame="true" autoPlay="true" id="blah"/>
