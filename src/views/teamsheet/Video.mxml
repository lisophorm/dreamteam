		 creationComplete="created(event)" >
	<fx:Script>
		<![CDATA[
			import com.alfo.utils.Console;
			
			import mx.events.FlexEvent;
			
			import events.TeamEvent;
			
			import model.TeamModel;
			
			import org.osmf.events.MediaPlayerStateChangeEvent;
			import org.osmf.events.TimeEvent;
			import org.osmf.utils.OSMFSettings;
			
			[Bindable]
			protected var teamColor:uint = 0xFFFFFF;
			
			[Bindable]
			protected var videoSource:String = "";
			
			
			public function created(event:FlexEvent=null):void
			{
				this.addEventListener( Event.INIT, init);
				init();
			}
			public function init(event:Event=null):void
			{
				Console.log("*** INIT TOPFIVEPLAYERS ***", this);
				
				
				if (this.parentApplication.data!=null)
				{
					/*	data = this.parentApplication.data;
					selectedTeam = data.team;
					teamname = data.team;
					Console.log( data.team, this );
					*/
				}
				this.parent.addEventListener( "EXIT", exit);
				TeamModel._instance.addEventListener( TeamEvent.TEAM_INFO, ready);
			}	
			protected function ready( e:TeamEvent ):void
			{
				if (TeamEvent.TEAM_INFO == e.type )
				{
					teamColor = TeamModel.getTeamColor();
					videoSource = TeamModel.getVideo();		
					//video.playerControls.visible = false;
					
				}
				
			}
			
			protected function exit( e:Event=null ):void
			{
			//	video.stop();
				
			}
				
			protected function blah_clickHandler(event:MouseEvent):void
			{
				trace("you clicked videoplayer");
				if(blah.playing) {
					blah.pause();
				} else {
					blah.play();
				}
			}
			
			protected function blah_mediaPlayerStateChangeHandler(event:MediaPlayerStateChangeEvent):void
			{
				trace("video player state"+event.state);
				
				/*blah.playPauseButton.enabled=false;
				blah.playButton.visible=false;
				blah.pauseButton.visible=false;
				blah.playPauseButton.enabled=false;
				blah.playerControls.visible=false;*/
				
			}
			
			protected function blah_creationCompleteHandler(event:FlexEvent):void
			{
				//blah.playButton.visible=false;
				//blah.pauseButton.visible=false;
				//blah.playPauseButton.enabled=false;
				//blah.playerControls.visible=false;
			}
			
			protected function blah_completeHandler(event:TimeEvent):void
			{
				blah.seek(0);
				
			}
			
		]]>
			</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
