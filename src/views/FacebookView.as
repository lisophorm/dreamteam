package views{	import fl.text.TLFTextField;	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import com.greensock.TweenMax;								public class FacebookView extends MovieClip 	{						function FacebookView()		{			trace("FacebookView")			if (this.stage!=null)				init();			else				this.addEventListener( Event.ADDED_TO_STAGE, init);		}				protected function init( e:Event = null):void		{						this.visible = true;			this.alpha = 1;			this.x = -this.width;			confirm_normal();			this.btn_start.buttonMode = this.btn_start.useHandCursor = true;			this.btn_start.addEventListener( MouseEvent.CLICK, confirm );			this.btn_start.addEventListener( MouseEvent.ROLL_OVER, confirm_over );			this.btn_start.addEventListener( MouseEvent.ROLL_OUT, confirm_normal );			this.btn_start.addEventListener( MouseEvent.MOUSE_DOWN, confirm_down );			this.btn_start.addEventListener( MouseEvent.MOUSE_UP, confirm_over );					}		protected function confirm_over( e:Event=null ):void		{			this.btn_start.gotoAndStop("hover");		}		protected function confirm_normal( e:Event=null ):void		{			this.btn_start.gotoAndStop("normal");		}		protected function confirm_down( e:Event ):void		{			this.btn_start.gotoAndStop("down");		}		protected function confirm( e:Event ):void		{			this.btn_start.gotoAndStop("normal");			TweenMax.to(this, .5, {x: -this.width, onComplete: readyToChange});			TweenMax.to(this.parent["GameView"], .5, {x: 0});					}		protected function readyToChange( e:Event =null ):void		{			this.visible = false;			this.dispatchEvent( new Event("START") );		}	}}