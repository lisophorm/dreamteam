				this.dispatchEvent( new ViewEvent( ViewEvent.LOCATION_RESTART ));
				
				navigationTimer = new Timer(200, 0);
				navigationTimer.addEventListener( TimerEvent.TIMER, checkNavigationHover );
				navigationTimer.start();
